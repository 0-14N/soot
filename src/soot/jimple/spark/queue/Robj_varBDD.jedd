package soot.jimple.spark.queue;
import soot.util.*;
import soot.jimple.spark.bdddomains.*;
import soot.jimple.spark.*;
import soot.jimple.toolkits.callgraph.*;
import soot.*;
import soot.util.queue.*;
import jedd.*;
import java.util.*;

public final class Robj_varBDD extends Robj_var {
    private <obj:H1, var:V1> bdd = 0B;
    void add( <obj:H1, var:V1> tuple ) { bdd |= tuple; }
    public Robj_varBDD( <obj:H1, var:V1> bdd ) { this.bdd = bdd; }
    Robj_varBDD() {}
    public Iterator iterator() {;
        final Iterator it = bdd.iterator( new Attribute[] { obj.v(), var.v() } );
        bdd = 0B;
        return new Iterator() {
            public boolean hasNext() { return it.hasNext(); }
            public Object next() {
                return new Tuple( (Object[]) it.next() );
            }
            public void remove() { throw new UnsupportedOperationException(); }
        };
    }
    public <obj:H1, var:V1> get() {
        <obj:H1, var:V1> ret = bdd;
        bdd = 0B;
        return ret;
    }
    public boolean hasNext() { return bdd != 0B; }
    private final class Tuple extends Robj_var.Tuple {
        private Object[] tuple;
        public Tuple( Object[] tuple ) { this.tuple = tuple; }
        public AllocNode obj() { return (AllocNode) tuple[0]; }
        public VarNode var() { return (VarNode) tuple[1]; }
    }
}
